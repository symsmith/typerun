{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es2022", "dom"],
    "baseUrl": "./src",
    "paths": {
      "validator": ["index.ts"],
      "validator/parse": ["parse/index.ts"],
      "validator/schema": ["schema/index.ts"],
      "validator/result": ["result/index.ts"]
    },
    "types": ["bun-types"]
  },
  "typedocOptions": {
    "entryPoints": ["src", "src/parse", "src/result", "src/schema"],
    "out": "docs",
    "name": "TypeRun",
    "readme": "./README.md",
    "plugin": ["typedoc-plugin-missing-exports"],
    "sort": ["source-order"],
    "customCss": "./assets/docs.css"
  }
}
