{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"lib": ["es2022", "dom"],
		"baseUrl": ".",
		"paths": {
			"validator": ["src/index.ts"],
			"validator/parse": ["src/parse/index.ts"],
			"validator/schema": ["src/schema/index.ts"],
			"validator/result": ["src/result/index.ts"]
		}
	}
}
